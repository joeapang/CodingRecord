@model LibraryManagement.Models.Book
@{
    ViewBag.Title = "DeleteBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>删除图书</h2></center>
<div align="center">
    <img src="~/Image/fenge_line.jpg" width="720" height="10" />
</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <h3>你确定删除<strong>@Model.bookname</strong>这本图书吗？</h3>
            <input type="submit" value="删除" /> |
            @Html.ActionLink("返回", "BookInformationManagement")
        </p>
    }
</div>
