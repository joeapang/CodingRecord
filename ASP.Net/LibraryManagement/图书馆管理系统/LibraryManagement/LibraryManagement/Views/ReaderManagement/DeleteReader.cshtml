@model LibraryManagement.Models.Reader
@{
    ViewBag.Title = "DeleteReader";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>删除读者</h2></center>
<div align="center">
    <img src="~/Image/fenge_line.jpg" width="720" height="10" />
</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <h3>你确定删除<strong>@Model.readername</strong>这个读者吗？</h3>
            <input type="submit" value="删除" /> |
            @Html.ActionLink("返回", "ReaderTypeManagement")
        </p>
    }
</div>
