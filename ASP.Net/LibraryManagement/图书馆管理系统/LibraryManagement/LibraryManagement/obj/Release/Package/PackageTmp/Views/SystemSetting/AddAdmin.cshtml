@model LibraryManagement.Models.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="@Url.Content("~/Content/table.css")" rel=" stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<center><h2>添加管理员信息</h2></center>
<div align="center">
    <img src="~/Image/fenge_line.jpg" width="720" height="10" />
</div>
<div align="center">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table>
        <tr>
            <td class="td1">@Html.LabelFor(model=>model.adminname)：</td>
            <td>@Html.EditorFor(model=>model.adminname)</td>
            <td>@Html.ValidationMessageFor(model=>model.adminname)</td>
        </tr>
        <tr>
            <td class="td1">@Html.LabelFor(model=>model.passward)：</td>
            <td>@Html.EditorFor(model=>model.passward)</td>
            <td>@Html.ValidationMessageFor(model => model.passward)</td>
        </tr>
        <tr>
           <td class="td1">确认密码：</td>
            <td>@Html.PasswordFor(model => model.ConfirmPassword)</td>
            <td>@Html.ValidationMessageFor(model => model.ConfirmPassword)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="添加" />
                <input type="button" value="取消" onclick="window.location = 'javascript:history.back()'" />
            </td>
        </tr>
    </table>
}
</div>
