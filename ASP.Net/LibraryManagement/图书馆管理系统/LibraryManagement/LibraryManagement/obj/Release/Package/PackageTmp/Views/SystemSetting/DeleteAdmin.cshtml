@model LibraryManagement.Models.Admin
@{
    ViewBag.Title = "DeleteAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>删除管理员</h2></center>
<div align="center">
    <img src="~/Image/fenge_line.jpg" width="720" height="10" />
</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <h3>你确定删除<strong>@Model.adminname</strong>这个管理员？</h3>
            <input type="submit" value="删除" /> |
            @Html.ActionLink("返回", "AdminSetting")
        </p>
    }
</div>
